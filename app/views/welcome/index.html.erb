<div data-role="page" id="welcome" data-url="<%= root_path %>">
  <div data-role="header">
    <h1>お薬手帳</h1>
  </div>
  <div data-role="content">
    <ul class="seals">
      <% @seals.each do |s| %>
        <li><%= image_tag download_seal_path(s) %></li>
      <% end %>
    </ul>
  </div>
  <div data-role="footer" data-position="fixed">
    <%= link_to 'お薬手帳シールをアップロード', new_seal_path, :'data-rel' => 'dialog' %>
    <%= link_to 'ログアウト', destroy_user_session_path, :method => 'delete' %>
    <%= link_to '個人設定', edit_member_path(current_user.member) %>
    <script>
      $(document).ready(function(){
        $(document.body).delegate('form[action="/users/sign_out"]', 'submit', function() {
          $(this).attr('data-ajax', false);
        });
      });
    </script>
  </div>
</div>
